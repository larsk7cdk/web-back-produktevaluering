@model IEnumerable<web_back_produktevaluering.web.Models.Evaluering>

@{
    ViewData["Title"] = "Evalueringer";
}

<h1>Evalueringer</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-dark">
            Her vises alle de oprettede evalueringer
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Navn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produkt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Karakter)
        </th>
        <th>
            <a asp-action="Create" class="float-right btn btn-success">Opret ny</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Navn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produkt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Karakter)
            </td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@item.EvalueringId">Rediger</a> |
                    <a asp-action="Details" asp-route-id="@item.EvalueringId">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.EvalueringId">Slet</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="4">
            <a asp-controller="Home" asp-action="Index">Tilbage til forside</a>
        </td>
    </tr>
    </tfoot>
</table>